<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/rinho"
    tools:context=".Admin.ContactForAdmin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardBackgroundColor="#5E5742"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Contact Info"
                    android:textColor="#FBFBFB"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold|italic"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"></ImageView>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="01521433784"
                    android:textColor="#FBFBFB"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:id="@+id/call_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/round_btn_with_border"
                    android:text="Call"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_14"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"></ImageView>

                <TextView
                    android:id="@+id/mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="cotact@boss.com"
                    android:textColor="#FBFBFB"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:id="@+id/mail_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/round_btn_with_border"
                    android:text="Mail"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_14"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center">

                <Button
                    android:id="@+id/message_btn"
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/round_btn_with_border"
                    android:text="Message"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_14"></Button>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>