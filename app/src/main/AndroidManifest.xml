<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.augmented_reality.AR_Based_E_Commerce">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_android"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_android"
        android:supportsRtl="true"
        android:theme="@style/Theme.AR_Based_E_Commerce">
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.CustomPhotoGalleryActivity"></activity>
        <activity
            android:name="com.augmented_reality.AR_Based_E_Commerce.Admin.Add_New_Product"
            android:label="@string/title_activity_add__new__product"
            android:theme="@style/Theme.AR_Based_E_Commerce.NoActionBar" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.Customer.Compare" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.Customer.Product_Details" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.Messenger" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.DisabledActivity" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.AllNotifications" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.PinViewLayout" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.SignUp" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.Customer.CustomerDashboard" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.Admin.AdminDashboard" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.SignIn" />

        <service
            android:name="com.augmented_reality.AR_Based_E_Commerce.SignIn"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.SelectUserType" />
        <activity android:name="com.augmented_reality.AR_Based_E_Commerce.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>